<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - لوحة تحكم المزارع - أينع</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/css/user.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light sticky-top shadow-sm navbar-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Farmer" asp-action="Index">
                <img src="~/logo.png" height="50" alt="أينع">
            </a>
            <button class="navbar-toggler d-lg-none me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="تبديل التنقل" style="border-color: rgba(0,0,0,0.1);">
                <i data-lucide="menu"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto mb-2 mb-md-0 d-none d-lg-flex"></ul>
            </div>

            <div class="d-flex align-items-center gap-2 ms-auto ms-lg-0">
                <div class="dropdown">
                    <button type="button" class="btn btn-outline-secondary position-relative dropdown-toggle" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="border: none; color: var(--bs-earth-dark);">
                        <i data-lucide="bell" style="width: 20px; height: 20px;"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-start shadow-lg" aria-labelledby="notificationDropdown" style="min-width: 300px;">
                        <li><h6 class="dropdown-header text-end">الإشعارات</h6></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center text-muted" href="#">لا توجد إشعارات جديدة</a></li>
                    </ul>
                </div>
                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3 d-flex align-items-center">
                        <i data-lucide="log-out" class="ms-1" style="width: 16px; height: 16px;"></i>
                        تسجيل الخروج
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <nav id="sidebarMenu" class="sidebar navbar-light d-lg-block">
        <div class="position-sticky pt-3">
            <div class="px-4 pb-3 mb-3 border-bottom border-secondary-subtle">
                <div class="d-flex align-items-center">
                    <i data-lucide="tractor" class="text-harvest-gold profile-icon ms-2" style="width: 40px; height: 40px;"></i>
                    <div class="d-flex">
                        <h4 class="mb-0 small">مرحباً بك، المزارع</h4>
                    </div>
                </div>
            </div>
            <div class="px-4 pb-3 mb-2">
                <div class="d-flex align-items-center">
                    <i data-lucide="clipboard-list" class="text-fresh-green ms-2" style="width: 20px; height: 20px;"></i>
                    <h6 class="fw-bold mb-0 text">قائمة لوحة التحكم</h6>
                </div>
            </div>
            <ul class="nav flex-column px-3">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-controller="Farmer" asp-action="Index">
                        <i data-lucide="home" class="ms-2" style="width: 20px; height: 20px;"></i>
                        الرئيسية
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Farmer" asp-action="Profile">
                        <i data-lucide="user" class="ms-2" style="width: 20px; height: 20px;"></i>
                        حسابي وتحديث الملف
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Crops" asp-action="Index">
                        <i data-lucide="carrot" class="ms-2" style="width: 20px; height: 20px;"></i>
                        إدارة المحاصيل
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Baskets" asp-action="Index">
                        <i data-lucide="shopping-basket" class="ms-2" style="width: 20px; height: 20px;"></i>
                        السلال للبيع
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Donations" asp-action="Index">
                        <i data-lucide="heart" class="ms-2" style="width: 20px; height: 20px;"></i>
                        طلبات التبرع
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reports" asp-action="CropInventory">
                        <i data-lucide="bar-chart-3" class="ms-2" style="width: 20px; height: 20px;"></i>
                        تقرير المخزون والصلاحية
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reports" asp-action="Performance">
                        <i data-lucide="trending-up" class="ms-2" style="width: 20px; height: 20px;"></i>
                        تقرير الأداء والمبيعات
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i data-lucide="check-circle" class="ms-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i data-lucide="alert-circle" class="ms-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>lucide.createIcons();</script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $.fn.dataTable.ext.errMode = 'none';
        $(document).ready(function () {
            $('table').DataTable({
                paging: false,
                info: false,
                order: [],
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"
                },
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>